void setup() {

  
}

void loop() {
  tone(3, 500, 00); // Do (C4)
  delay(600);

  tone(3, 294, 500); // Re (D4)
  delay(600);

  tone(3, 330, 500); // Mi (E4)
  delay(600);

  tone(3, 349, 500); // Fa (F4)
  delay(600);

  tone(3, 392, 500); // Sol (G4)
  delay(600);

  tone(3, 440, 500); // La (A4)
  delay(600);

  tone(3, 494, 500); // Si (B4)
  delay(600);

  tone(3, 523, 800); // Do (C5) – üst oktav
  delay(1000);
}
